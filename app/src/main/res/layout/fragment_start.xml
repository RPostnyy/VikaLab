<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XOGame.StartFragment"
    android:gravity="center_horizontal"
    android:weightSum="9"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Крестики-нолики"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/xo_2_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 игрока"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/game_with_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Игра против компьютера"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </RadioGroup>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/btn_start_xo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textSize="20sp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>
